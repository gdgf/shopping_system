        <activity android:name=".Staff.ViewStaffActivity"></activity>
        <activity android:name=".Purchase.PRecording"></activity>
        <activity android:name=".Sales.SRecording"></activity>
        <activity android:name=".StoreActivity"></activity>
        <activity android:name=".Staff.Achievement"></activity>
